<div class="container devise__container">
  <h2 class="devise__headline">Iniciar Sesión</h2>

  <div class="devise__form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Correo Electrónico", class: "devise__input"%>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder:"Contraseña" , class: "devise__input"%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "Recordarme" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entrar", class: "btn devise__button" %>
      </div>
    <% end %>
  </div>

  <div class="devise__shared">
    <%= render "devise/shared/links" %>
  </div>

</div>
