<header>
  <nav class="navbar navbar-default navbar-static-top main-header__navbar">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed main-header__button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar main-header__icon"></span>
          <span class="icon-bar main-header__icon"></span>
          <span class="icon-bar main-header__icon"></span>
        </button>
        <%= link_to  root_path, class: "navbar-brand logo" do %>
          <img src="/assets/logo.svg" alt="logo plan zero">
        <% end %>
      </div>
      <div id="navbar" class="main-header__navbar navbar-collapse collapse ">
        <ul class="nav navbar-nav ">
          <li class="active">
            <%= link_to'Inicio', root_path %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= link_to "Dashboard", debts_path %>
            </li>
            <li>
              <%= link_to "Crear Deuda", new_debt_path %>
            </li>
          <% else %>
            <li><a href="#about">Beneficios</a></li>
