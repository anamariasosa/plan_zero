<p id="notice"><%= notice %></p>

<h1>Listing Debts</h1>

<table>
  <thead>
    <tr>
      <th>Debt name</th>
      <th>Amount</th>
      <th>Interest rate</th>
      <th>Remaining fees</th>
      <th>Frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.debt_name %></td>
        <td><%= debt.amount %></td>
        <td><%= debt.interest_rate %></td>
        <td><%= debt.remaining_fees %></td>
        <td><%= debt.frequency %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

